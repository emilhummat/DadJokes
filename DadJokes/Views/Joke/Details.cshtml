@model DadJokes.Models.Joke
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Joke Details</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4 p-3">
                        <label asp-for="Question"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Question" disabled class="form-control" />
                  
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 p-3">
                        <label asp-for="Answer"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Answer" disabled class="form-control" />
                       
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                      
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary w-50"><i class="fa-solid fa-right-from-bracket"></i>Back to Jokes</a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-4">
                @*Keep this empty*@
            </div>
        </div>
    </div>


