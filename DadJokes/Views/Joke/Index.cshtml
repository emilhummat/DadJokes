@model IEnumerable<DadJokes.Models.Joke>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Jokes</h2> 
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Joke" asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> &nbsp; Add a new joke</a>
            
        </div>
    </div>
</div>

<br />
@if (Model.Count() > 0)
{<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
                <th class="text-center">
                Question
            </th>
                <th class="text-center">
                Answer
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%" class="text-center">@obj.Question</td>
                    <td width="35%" class="text-center">
                    <a asp-controller="Joke" asp-route-Id="@obj.Id" asp-action="Details" class="btn btn-primary mx-2">Show Answer</a>
                    </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Joke" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a asp-controller="Joke" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2"><i class="fa-solid fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
<p>There is no joke to display.</p>    
}

